<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>End trip</h1>
            <% if (typeof (partials) != 'undefined') { %>
                <%- include(partials) %>
            <% } %>
            <form action=<%= formPostUrl %> method="POST">
                <div class="form-group center">

                        <% if (trips.length > 0) { %>
                    <h5><b>from: <%=trips[0].FROM%> to: <%=trips[0].TO%> </b><br>Starting time: <%=trips[0].START_TIME%></h5>
                        <% } else {%>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>Error!</strong>No trips currently running! .
                        </div>
                        <% } %>

                </div>
                <div class="col-md-6 form-group center">
                    <label for="param">
                        Trip ID
                    </label>
                    <input
                            type="number"
                            id="param"
                            name="param"
                            class="form-control"
                            value=
                            <% if (trips.length > 0) { %>
                                <%=trips[0].ID%>
                            <% } else {%>
                                -1
                            <% } %>
                            readonly
                    />
                </div>
                <button class="btn-info btn right-aligned-btn" >End Trip</button>

            </form>
        </div>
    </div>
</div>