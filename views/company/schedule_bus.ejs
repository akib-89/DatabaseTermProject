<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Schedule bus</h1>
            <% if (typeof (partials) != 'undefined') { %>
                <%- include(partials) %>
            <% } %>
            <form action=<%=formPostUrl%> method="POST">
                <div class="form-group">
                    <label for="bus_id">
                        Bus ID
                    </label>
                    <input
                            type="search"
                            list="bus-search"
                            id="bus_id"
                            name="bus_id"
                            class="form-control"
                            placeholder="Enter the Bus ID"
                    />
                    <datalist id="bus-search">
                        <% if (typeof buses != 'undefined') { %>
                            <% buses.forEach(function (bus) { %>
                            <option value=<%=bus.ID%>><%=bus.LICENCE_PLATE_NUMBER%>, capacity= <%= bus.CAPACITY%></option>
                            <%});%>
                        <%}%>
                    </datalist>
                </div>
                <div class="form-group">
                    <label for="route_id">
                        Route ID
                    </label>
                    <input
                            type="search"
                            list="route-search"
                            id="route_id"
                            name="route_id"
                            class="form-control"
                            placeholder="Enter the Bus ID"
                    />
                    <datalist id="route-search">
                        <% if (typeof routes != 'undefined') { %>
                            <% routes.forEach(function (route) { %>
                            <option value=<%=route.ID%>><%=route.NAME%></option>
                            <%});%>
                        <%}%>
                    </datalist>
                </div>
                <div class="form-group">
                    <label for="date">
                        Date of operation
                    </label>
                    <input
                            type="date"
                            id="date"
                            name="operation_date"
                            class="form-control"
                            min=<%=minDate%>
                            placeholder="Enter operating date"
                    />
                </div>
                <div class="form-group">
                    <label for="num-days">
                        Date of operation
                    </label>
                    <input
                            type="number"
                            id="num-days"
                            name="num_days"
                            class="form-control"
                            min="1"
                            max="9"
                            placeholder="Enter operating date"
                    />
                </div>

                <button class="btn-info btn right-aligned-btn">Schedule bus</button>
            </form>
        </div>
    </div>
</div>