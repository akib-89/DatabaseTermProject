<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i><%= title %></h1>
            <div id="partial">
                <% if (typeof (partials) != 'undefined') { %>
                    <%- include(partials) %>
                <% } %>
            </div>
            <form action=<%= formPostUrl %> method="POST">
                <div class="form-group">
                    <label for="search-box">
                       Driver Approval
                    </label>
                    <input
                            type="search"
                            list="search-option"
                            id="search-box"
                            placeholder="Enter the parameter to insert"
                    />
                    <datalist id="search-option">
                        <% if (typeof buses != 'undefined') { %>
                            <% buses.forEach(function (bus) { %>
                            <option value=<%=bus.ID%>>
                                <%=bus.DRIVER_ID%>,
                                <%=bus.DRIVING_LICENCE_NUMBER%>,
                                <%=bus.OPERATE_DATE%>,
                                <%=bus.RATING%>
                            </option>
                            <%});%>
                        <%}%>
                    </datalist>
                </div>
                <div class="form-group">
                    <label for="bus-id">
                        Bus ID
                    </label>
                    <input
                            type="number"
                            id="bus-id"
                            name="bus_id"
                            class="form-control"
                            placeholder="Select form the dropdown option"
                            readonly
                    />
                </div>
                <div class="form-group">
                    <label for="driver-id">
                        Driver ID
                    </label>
                    <input
                            type="number"
                            id="driver-id"
                            name="driver_id"
                            class="form-control"
                            placeholder="Select form the dropdown option"
                            readonly
                    />
                </div>
                <div class="form-group">
                    <label for="operation-date">
                        Date of operation
                    </label>
                    <input
                            type="date"
                            id="operation-date"
                            name="operation_date"
                            class="form-control"
                            readonly
                    />
                </div>
                <button class="btn-info btn right-aligned-btn">Approve Driver</button>
            </form>
        </div>
    </div>
</div>