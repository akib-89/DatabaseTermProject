<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Update Bus Coordinate</h1>
            <% if (typeof (partials) != 'undefined') { %>
                <%- include(partials) %>
            <% } %>
            <form action=<%=formPostUrl%> method="POST">
                <div class="form-group">
                    <label for="bus_id">
                        Bus ID
                    </label>
                    <input
                            type="search"
                            list="bus-search"
                            id="bus_id"
                            name="bus_id"
                            class="form-control"
                            placeholder="Enter the Bus ID"
                    />
                    <datalist id="bus-search">
                        <% if (typeof buses != 'undefined') { %>
                            <% buses.forEach(function (bus) { %>
                            <option value=<%=bus.ID%>></option>
                            <%});%>
                        <%}%>
                    </datalist>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label for="x-coordinate">
                            x coordinate
                        </label>
                        <input
                                type="number"
                                id="x-coordinate"
                                name="x_coordinate"
                                class="form-control"
                                value="1"
                                min="1"
                                max="7"
                                placeholder="Enter operating date"
                        />
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="y-coordinate">
                            y coordinate
                        </label>
                        <input
                                type="number"
                                id="y-coordinate"
                                name="y_coordinate"
                                class="form-control"
                                value="1"
                                min="1"
                                max="7"
                                placeholder="Enter operating date"
                        />
                    </div>
                </div>
                <button class="btn-info btn right-aligned-btn">Update Bus location</button>
            </form>
        </div>
    </div>
</div>